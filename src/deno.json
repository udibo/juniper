{
  "name": "@udibo/juniper",
  "version": "0.0.2",
  "description": "Juniper is a web framework for building React applications with Deno.",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./build": "./build.ts",
    "./dev": "./dev.ts",
    "./server": "./server.tsx",
    "./client": "./client.tsx",
    "./utils/env": "./utils/env.ts",
    "./utils/otel": "./utils/otel.ts",
    "./utils/testing": "./utils/testing.ts",
    "./utils/global-jsdom": "./utils/global-jsdom.ts"
  },
  "tasks": {
    "test": {
      "description": "Runs the tests.",
      "command": "deno test -P=test --env-file=../example/.env --env-file=../example/.env.test"
    },
    "test-update": {
      "description": "Runs the tests and updates the snapshots.",
      "command": "deno task test -- --update"
    }
  },
  "imports": {
    "@babel/core": "npm:@babel/core@^7.28.5",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.25.1",
    "@udibo/http-error": "jsr:@udibo/http-error@^0.11.1",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/async": "jsr:@std/async@^1.0.16",
    "@std/cli": "jsr:@std/cli@^1.0.25",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/streams": "jsr:@std/streams@^1.0.16",
    "@deno/esbuild-plugin": "jsr:@deno/esbuild-plugin@^1.2.1",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "babel-plugin-react-compiler": "npm:babel-plugin-react-compiler@^1.0.0",
    "esbuild": "npm:esbuild@^0.27.2",
    "isbot": "npm:isbot@^5.1.32",
    "quick-lru": "npm:quick-lru@^7.3.0",
    "hono": "npm:hono@^4.11.3",
    "react": "npm:react@^19.2.3",
    "@types/react": "npm:@types/react@^19.2.7",
    "react-dom": "npm:react-dom@^19.2.3",
    "react-error-boundary": "npm:react-error-boundary@^6.0.1",
    "react-router": "npm:react-router@^7.11.0",
    "serialize-javascript": "npm:serialize-javascript@^7.0.2",
    "superjson": "npm:superjson@^2.2.6",
    "@testing-library/react": "npm:@testing-library/react@^16.3.1",
    "global-jsdom": "npm:global-jsdom@^27"
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "permissions": {
    "serve": {
      "net": true,
      "env": true,
      "read": true,
      "write": ["./example/public/build"]
    },
    "dev": {
      "net": true,
      "env": true,
      "read": true,
      "write": [
        "./example/public/build",
        "./example/main.ts",
        "./example/main.tsx"
      ],
      "run": true
    },
    "build": {
      "env": true,
      "read": true,
      "write": [
        "./example/public/build",
        "./example/main.ts",
        "./example/main.tsx"
      ],
      "run": true
    },
    "test": {
      "net": true,
      "env": true,
      "read": true,
      "write": true,
      "run": true
    }
  }
}
