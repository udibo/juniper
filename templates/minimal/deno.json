{
  "tasks": {
    "serve": {
      "description": "Runs the server in development mode.",
      "command": "deno run -P=serve --env-file ./main.ts"
    },
    "serve-prod": {
      "description": "Runs the server in production mode.",
      "command": "deno run -P=serve --env-file --env-file=.env.production ./main.ts"
    },
    "build": {
      "description": "Builds the application for development.",
      "command": "export OTEL_SERVICE_NAME=build && deno run -P=build --env-file ./build.ts"
    },
    "build-prod": {
      "description": "Builds the application for production.",
      "command": "export OTEL_SERVICE_NAME=build && deno run -P=build --env-file --env-file=.env.production ./build.ts"
    },
    "dev": {
      "description": "Runs the development server.",
      "command": "export OTEL_SERVICE_NAME=dev && deno run -P=dev --env-file @udibo/juniper/dev --project-root ."
    },
    "test": {
      "description": "Runs the tests.",
      "command": "deno test -P=test --env-file --env-file=.env.test"
    },
    "check": {
      "description": "Checks the formatting and runs the linter.",
      "command": "deno lint && deno fmt --check"
    }
  },
  "imports": {
    "@/": "./",
    "@udibo/juniper": "jsr:@udibo/juniper@^0.0.1",
    "@udibo/http-error": "jsr:@udibo/http-error@0.10",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/streams": "jsr:@std/streams@^1.0.13",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "react": "npm:react@^19.2.0",
    "@types/react": "npm:@types/react@^19.2.2",
    "react-router": "npm:react-router@^7.9.5",
    "hono": "npm:hono@^4.10.4"
  },
  "permissions": {
    "serve": {
      "env": true,
      "read": true,
      "net": true
    },
    "build": {
      "env": true,
      "read": true,
      "write": true,
      "run": true
    },
    "dev": {
      "env": true,
      "read": true,
      "write": true,
      "net": true,
      "run": true
    },
    "test": {
      "env": true,
      "read": ["./public"],
      "net": true,
      "run": true
    }
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "exclude": ["public/build"]
}
