{
  "name": "@udibo/juniper",
  "version": "0.0.1",
  "description": "Juniper is a web framework for building React applications with Deno.",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./build": "./build.ts",
    "./dev": "./dev.ts",
    "./server": "./server.tsx",
    "./client": "./client.tsx",
    "./utils/env": "./utils/env.ts",
    "./utils/otel": "./utils/otel.ts",
    "./utils/testing": "./utils/testing.ts"
  },
  "tasks": {
    "serve": {
      "description": "Runs the server in development mode.",
      "command": "deno run -P=serve --env-file ./example/main.ts"
    },
    "serve-prod": {
      "description": "Runs the server in production mode.",
      "command": "deno run -P=serve --env-file --env-file=.env.production ./example/main.ts"
    },
    "build": {
      "description": "Builds the application for development.",
      "command": "export OTEL_SERVICE_NAME=build && deno run -P=build --env-file ./example/build.ts"
    },
    "build-prod": {
      "description": "Builds the application for production.",
      "command": "export OTEL_SERVICE_NAME=build && deno run -P=build --env-file --env-file=.env.production ./example/build.ts"
    },
    "dev": {
      "description": "Runs the development server.",
      "command": "export OTEL_SERVICE_NAME=dev && deno run -P=dev --env-file ./dev.ts --project-root ./example"
    },
    "test": {
      "description": "Runs the tests.",
      "command": "deno test -P=test --env-file --env-file=.env.test"
    },
    "test-update": {
      "description": "Runs the tests and updates the snapshots.",
      "command": "deno task test -- --update"
    },
    "check": {
      "description": "Checks the formatting and runs the linter.",
      "command": "deno lint && deno fmt --check"
    },
    "git-rebase": {
      "description": "Gets your branch up to date with master after a squash merge.",
      "command": "git fetch origin main && git rebase --onto origin/main HEAD"
    },
    "start-lgtm": {
      "description": "Starts the LGTM service.",
      "command": "docker compose up -d --wait lgtm"
    },
    "stop-lgtm": {
      "description": "Stops the LGTM service.",
      "command": "docker compose down lgtm"
    }
  },
  "imports": {
    "/": "./example/",
    "./": "./",
    "@babel/core": "npm:@babel/core@^7.28.5",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.20.2",
    "@udibo/http-error": "jsr:@udibo/http-error@0.10",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/async": "jsr:@std/async@^1.0.15",
    "@std/cli": "jsr:@std/cli@^1.0.23",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/streams": "jsr:@std/streams@^1.0.13",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/uuid": "jsr:@std/uuid@^1.0.9",
    "@luca/esbuild-deno-loader": "jsr:@kylejune/esbuild-deno-loader@^0.12.1",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "babel-plugin-react-compiler": "npm:babel-plugin-react-compiler@^1.0.0",
    "esbuild": "npm:esbuild@^0.25.12",
    "quick-lru": "npm:quick-lru@^7.3.0",
    "zod": "npm:zod@^3.25.76",
    "hono": "npm:hono@^4.10.4",
    "react": "npm:react@^19.2.0",
    "@types/react": "npm:@types/react@^19.2.2",
    "react-dom": "npm:react-dom@^19.2.0",
    "react-error-boundary": "npm:react-error-boundary@^4.1.2",
    "react-router": "npm:react-router@^7.9.5",
    "serialize-javascript": "npm:serialize-javascript@^6.0.2",
    "superjson": "npm:superjson@^2.2.5",
    "@testing-library/react": "npm:@testing-library/react@^16.3.0",
    "global-jsdom": "npm:global-jsdom@^27"
  },
  "nodeModulesDir": "auto",
  "unstable": ["kv"],
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "permissions": {
    "serve": {
      "net": true,
      "env": true,
      "read": true,
      "write": ["./example/public/build"]
    },
    "dev": {
      "net": true,
      "env": true,
      "read": true,
      "write": [
        "./example/public/build",
        "./example/main.ts",
        "./example/main.tsx"
      ],
      "run": true
    },
    "build": {
      "env": true,
      "read": true,
      "write": [
        "./example/public/build",
        "./example/main.ts",
        "./example/main.tsx"
      ],
      "run": true
    },
    "test": {
      "net": true,
      "env": true,
      "read": true,
      "write": true,
      "run": true
    }
  }
}
